<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/play_background"
    tools:context="com.atguigu.moshang_listeners.PlaySectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/turn_musicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匆匆那年"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/turn_musicArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王菲"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:src="@drawable/voice_selector"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"/>

            <SeekBar
                android:id="@+id/voice_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/text_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60%"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/lrc_tv_lrc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textColor="#fff"/>

            </ScrollView>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"/>

        <SeekBar
            android:id="@+id/turn_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/time_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/play_style"
                android:layout_width="28dp"
                android:layout_height="22dp"
                android:background="@drawable/order_cycle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/play_previous"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/sing_previous"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/play_playorpause"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/sing_pause"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/play_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/sing_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:id="@+id/play_save"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/close_songword"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
